<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Data Siswa</h1>
    <a href="/siswas/create">Buat data baru</a>
    <table>
      <thead>
        <th>Nama</th>
        <th>Alamat</th>
        <th>Kelas</th>
        <th>Aksi</th>
      </thead>
      <tbody>
        <% for (let i = 0; i < siswas.length; i++) { %>
          <tr>
            <td> <%= siswas[i].nama %> </td>
            <td> <%= siswas[i].alamat %> </td>
            <td> <%= siswas[i].kelas %> </td>
            <td>
              <a href="/siswas/edit/<%=siswas[i].id %>">Edit</a>
              <a href="/siswas/delete/<%=siswas[i].id %>">Hapus</a>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
